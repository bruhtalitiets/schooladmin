	<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-50 ">
      <div class="responsive-login col-12 col-sm-12  p-md-4">
        <div class="btn-box1">
          <button class="admin-btn">
            <ion-icon class="icon-above" name="laptop-outline"></ion-icon>
            <span class="button-name">Admin</span>
          </button>
          <button class="admin-btn">
            <ion-icon class="icon-above" name="people-circle-outline"></ion-icon>
            <span class="button-name">Docent</span>
          </button>
          <button class="admin-btn">
            <ion-icon class="icon-above" name="person-circle-outline"></ion-icon>
            <span class="button-name">Leerling</span>
          </button>
        </div>
        <div class="btn-box2">
          <button class="btn btn-1">Inloggen</button>
          <button class="btn btn-2">Registreren</button>
        </div>

        <form action="/login" method="POST">

          <div class="form-title">
            <span>Aanmelden</span>
          </div>

          <div class="input-container">

            <div class="input-box">
              <input class="inputs" type="text" name="email" placeholder="Gebruikersnaam of e-mail" required>
              <ion-icon class="icon" name="person-outline"></ion-icon>
            </div>

            <div class="input-container mb-2">
              <div class="input-box">
                <input class="inputs" type="text" name="password" placeholder="Wachtwoord">
                <ion-icon class="icon" name="lock-closed-outline"></ion-icon>
              </div>
            </div>
          </div>

          <div class="remember-login ms-3">
				<label for="rememberMe"><input type="checkbox" class="mx-2" id="rememberMe" name="rememberMe" value="yes">Onthoud mij</label>
          </div>

          <br>

          <div class="submit">
            <button class="submit-btn">
              <span>Log in</span>
              <ion-icon class="arrow" name="arrow-forward-outline"></ion-icon>
            </button>
          </div>

          <div class="forgot-pass">
            <a href="#">Wachtwoord vergeten?</a>
          </div>
        </form>
      </div>
    </div>
